@model IEnumerable<Language.Models.Food_Category>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Public/images/category/@item.Image" alt="Icon not found" class="img-fluid categoryIcon" />
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="text-right">
                <a title="Edit Category" class="foodCrud" href="/Config/Food_Category/Edit/@item.Id"><i class="fas fa-pencil-alt"></i></a>
                <a title="Details Category" class="foodCrud" href="/Config/Food_Category/Details/@item.Id"><i class="fas fa-info"></i></a>
                <a title="Delete Category" class="foodCrud removeFood" href="#" data-FoodId="@item.Id" data-FoodName="@item.Name" data-Image="@item.Image"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
    }
</table>


@* MODAL FOR DELETE CATEGORY *@
<input type="hidden" id="foodIdHolder" />
<input type="hidden" id="foodNameHolder" />

<div id="confirmModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 style="color: #d43f3a;" class="modal-title">Delete</h4>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <span></span>?</p>
                <img class="img-thumbnail" style="width: 13%; background: black;" data-folder="category" src="" alt="Photo not found" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger confirmbtn">Delete</button>
            </div>
        </div>
    </div>
</div>


@* ---SUCCESS MODAL--- *@
<div id="successModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Success</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><span></span> removed successfully from food list</p>
                <img style="width: 15%;" src="~/Areas/Config/Public/Image/checked.png" alt="Photo not fouond" class="img-fluid" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="window.location.reload();">Done</button>
            </div>
        </div>
    </div>
</div>

@* ---ERROR MODAL--- *@
<div id="errorModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Error</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Something went wrong</p>
                <img style="width: 15%;" src="~/Areas/Config/Public/Image/error.png" alt="Photo not fouond" class="img-fluid" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default">OK</button>
            </div>
        </div>
    </div>
</div>
