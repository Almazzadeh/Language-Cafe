@using Language.Models;
@using Language.ViewModel;

@model MenuVM

@{
    ViewBag.Title = "Menu";
}

<div id="mobilemenuPage">
    <div class="container-fluid">
        <div class="accordion" id="accordionExample">
            @for (int i = 0; i < Model.category.Count; i++)
            {
                <div class="card">
                    <div class="card-header @(i == 0 ? "activeCard" : "")" id="heading@(i)">
                        <h5 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse@(i)" aria-expanded="true" aria-controls="collapse@(i)">
                                @Model.category[i].Name
                            </button>
                        </h5>
                    </div>

                    <div id="collapse@(i)" class="collapse @(i == 0 ? "show" : "")" aria-labelledby="heading@(i)" data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="row">
                                @Html.Partial("_Foodcard", Model.food.Where(s => s.Food_Category.Id == Model.category[i].Id))
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

